{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["ES2021.Promise", "ES2023.Array", "ES6"],
    "module": "NodeNext",
    "rootDir": "src",
    "baseUrl": "./",
    "typeRoots": ["node_modules/@types", "./@types"],
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "noImplicitAny": true
  },
  "include": ["src", "declarations.d.ts", "@types"],
  "exclude": ["node_modules", "dist"]
}
